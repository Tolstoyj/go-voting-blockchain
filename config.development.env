# Development Environment Configuration
# Copy this file to .env for local development

# Server Configuration
PORT=8080
GIN_MODE=debug

# Database Configuration (Local Development)
DATABASE_URL=postgres://voting_user:voting_password123@localhost:5433/voting_blockchain?sslmode=disable

# Redis Configuration (Local Development)
REDIS_URL=redis://:voting_redis_pass123@localhost:6380/0

# Blockchain Configuration
MINING_DIFFICULTY=2
MINING_THRESHOLD=3

# Security Configuration (Development - Less Strict)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Development Features
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_PROFILING=true

# Rate Limiting (Development - More Permissive)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# JWT Configuration (Development)
JWT_SECRET=development-secret-key-change-in-production
JWT_EXPIRY=24h

# Database Pool Configuration
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
